<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント投稿</h1>
        
          <%= form_for @comment do |f| %>
          <!-- 元はhidden_fieldはtopic_idのみだったが、user_idも足した。-->
          <!-- topic_idのみだと、コメントのユーザーを特定できていなかった模様 -->
          <!-- rails c で見たところ前のコメントにもuser_idが入ってる-->
            <%= f.hidden_field :topic_id, value: @comment.topic_id %>
            <%= f.hidden_field :user_id, value: @comment.user_id %>
            <div class="form-group">
              <% f.label :comment %>
              <%= f.text_area :comment, size: "10x10", class: 'form-control' %>
            </div>

           <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
           <% end %>

          <% end %>
      </div>
    </div>
  </div>
</div>



