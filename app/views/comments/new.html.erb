<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント投稿</h1>
        
          <%= form_for @comment do |f| %>
            <div class="form-group">
              <% f.label :comment %>
              <%= f.text_area :comment, size: "10x10", class: 'form-control' %>
            </div>

           <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
           <% end %>

          <% end %>
      </div>
    </div>
  </div>
</div>



